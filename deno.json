{
  "tasks": {
    "sync": "deno run --allow-env --allow-read --allow-write --allow-net --allow-run --env-file=.env src/sync.ts",
    "start": "deno run --allow-env --allow-read --allow-net src/server.ts",
    "dev": "deno run --allow-env --env-file=.env --allow-read --allow-net --watch src/server.ts",
    "test": "TZ=utc deno test --allow-env --allow-read --allow-write --allow-net --allow-run --env-file=.env.test",
    "build": "deno run --allow-env --allow-read --allow-write --allow-net --allow-run src/sync.ts && deno task build:css:prod",
    "build:css": "deno run --allow-env --allow-read --allow-write --allow-run npm:tailwindcss@^3.4.0 -i ./src/input.css -o ./dist/output.css --watch",
    "build:css:prod": "deno run --allow-env --allow-read --allow-write --allow-run --allow-ffi --allow-sys npm:tailwindcss@^3.4.0 -i ./src/input.css -o ./dist/output.css --minify",
    "compile": "deno compile --allow-env --allow-read --allow-write --allow-net --allow-run src/sync.ts -o dist/sync && deno compile --allow-env --allow-read --allow-net src/server.ts -o dist/server",
    "compile:sync": "deno compile --allow-env --allow-read --allow-write --allow-net --allow-run src/sync.ts -o dist/sync",
    "compile:server": "deno compile --allow-env --allow-read --allow-net src/server.ts -o dist/server"
  },
  "imports": {
    "@deno/gfm": "jsr:@deno/gfm@^0.11.0",
    "googleapis": "npm:googleapis",
    "tailwindcss": "npm:tailwindcss@^3.4.0"
  },
  "fmt": {
    "exclude": [
      "**/*.md",
      "**/*.json"
    ]
  }
}